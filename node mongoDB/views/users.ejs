<%- include('nav') %>
    <div class="container">
        <div class="row justify-content-center mt-5">

            <div class="col-md-7">
                <% if(users.length == 0){ %>
                    <h3 class="text-center mt-5">No user found! ðŸ˜”</h3>
                    <%}else{%>
                        <h3>All Registered Users</h3>
